<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Too Good CRM - Vendor Mode Theme (Material Design 3) -->
    
    <!-- Base Light Theme -->
    <style name="Theme.TooGoodCrm" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors (Purple for Vendor) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
        
        <!-- Secondary Colors (Indigo) -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>
        
        <!-- Tertiary Colors (Violet) -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Outline Colors -->
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>
        
        <!-- Status Bar & Navigation Bar (Matching Web App) -->
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Window Background (Matching Web App) -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        
        <!-- Material Shape Appearance (Rounded corners) -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TooGoodCrm.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TooGoodCrm.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TooGoodCrm.LargeComponent</item>
        
        <!-- Text Appearance (Material Typography) -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.TooGoodCrm.DisplayLarge</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.TooGoodCrm.HeadlineLarge</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.TooGoodCrm.TitleLarge</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.TooGoodCrm.BodyLarge</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.TooGoodCrm.LabelLarge</item>
    </style>
    
    <!-- Shape Appearances (Corner Radii) -->
    <style name="ShapeAppearance.TooGoodCrm.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_small</item>
    </style>
    
    <style name="ShapeAppearance.TooGoodCrm.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_medium</item>
    </style>
    
    <style name="ShapeAppearance.TooGoodCrm.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_extra_large</item>
    </style>
    
    <!-- Text Appearances (Material Typography Scale) -->
    <style name="TextAppearance.TooGoodCrm.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">57sp</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.TooGoodCrm.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.TooGoodCrm.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>
    
    <style name="TextAppearance.TooGoodCrm.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>
    
    <style name="TextAppearance.TooGoodCrm.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>
    
    <!-- Vendor-Specific Component Styles -->
    
    <!-- Button Styles -->
    <style name="Widget.TooGoodCrm.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>
    
    <style name="Widget.TooGoodCrm.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>
    
    <style name="Widget.TooGoodCrm.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.TooGoodCrm.Card.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/elevation_level_1</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>
    
    <style name="Widget.TooGoodCrm.Card.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>
    
    <style name="Widget.TooGoodCrm.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="strokeColor">@color/outline</item>
        <item name="strokeWidth">@dimen/text_field_border_width_default</item>
    </style>
    
    <!-- Chip Styles -->
    <style name="Widget.TooGoodCrm.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
        <item name="android:minHeight">@dimen/chip_height</item>
    </style>
    
    <style name="Widget.TooGoodCrm.Chip.Assist" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
        <item name="android:minHeight">@dimen/chip_height</item>
    </style>
    
    <!-- Text Field Styles -->
    <style name="Widget.TooGoodCrm.TextInputLayout.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
    </style>
    
    <style name="Widget.TooGoodCrm.TextInputLayout.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_field_corner_radius</item>
        <item name="boxStrokeColor">@color/outline</item>
    </style>
    
    <!-- Status Chip Styles (For Order Status, Issue Status, etc.) -->
    <style name="Widget.TooGoodCrm.Chip.Status.Open" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/info_light</item>
        <item name="android:textColor">@color/info_dark</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
    </style>
    
    <style name="Widget.TooGoodCrm.Chip.Status.InProgress" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/warning_light</item>
        <item name="android:textColor">@color/warning_dark</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
    </style>
    
    <style name="Widget.TooGoodCrm.Chip.Status.Completed" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/success_light</item>
        <item name="android:textColor">@color/success_dark</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
    </style>
    
    <style name="Widget.TooGoodCrm.Chip.Status.Failed" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/error_light</item>
        <item name="android:textColor">@color/error_dark</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
    </style>
    
    <!-- Priority Chip Styles -->
    <style name="Widget.TooGoodCrm.Chip.Priority.Urgent" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/error_light</item>
        <item name="android:textColor">@color/priority_urgent</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
    </style>
    
    <style name="Widget.TooGoodCrm.Chip.Priority.High" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/warning_light</item>
        <item name="android:textColor">@color/priority_high</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
    </style>
    
    <!-- FAB Style -->
    <style name="Widget.TooGoodCrm.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.TooGoodCrm.FAB</item>
    </style>
    
    <style name="ShapeAppearance.TooGoodCrm.FAB" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerSize">@dimen/fab_corner_radius_standard</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.TooGoodCrm.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_navigation_item_colors</item>
        <item name="itemTextColor">@color/bottom_navigation_item_colors</item>
        <item name="elevation">@dimen/elevation_level_8</item>
    </style>
    
    <!-- Top App Bar Style -->
    <style name="Widget.TooGoodCrm.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.TooGoodCrm.TitleLarge</item>
        <item name="titleTextColor">@color/on_surface</item>
    </style>
</resources>
