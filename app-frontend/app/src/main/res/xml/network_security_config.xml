<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for ALL local development -->
    <!-- This allows ANY local IP address during development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Specific domains for local development (optional - already covered by base-config) -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android Emulator localhost -->
        <domain includeSubdomains="true">10.0.2.2</domain>

        <!-- Local network IP ranges -->
        <domain includeSubdomains="true">192.168.0.102</domain>
        <domain includeSubdomains="true">192.168.0.106</domain>
        <domain includeSubdomains="true">192.168.0.107</domain>
        <domain includeSubdomains="true">192.168.0.131</domain>
        <domain includeSubdomains="true">192.168.1.100</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>

    <!-- For production, you can add specific HTTPS-only domains -->
    <!-- <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.yourproduction.com</domain>
    </domain-config> -->
</network-security-config>

